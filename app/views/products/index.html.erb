<p id="notice"><%= notice %></p>

<h1><%= @heading %></h1>

<div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
          <h4 class="product-heading"><%= link_to product.name, product %></a></h4>
          <%= link_to (image_tag product.image), product %>
          <div class="caption">
            <h4 class="pull-left">CZK: <%= product.price %></h4>
            <p class="pull-right">
              <% if product.stock_quantity > 0 %>
              <%= link_to "Add to cart", add_cart_item_path(:product_id => product), :method => :post, :class => "btn btn-success" %>
              <% else %>
                  <span class="text-danger"> Out of stock</span></p>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
</div>

<div class="row">
  <p><%= @description %></p>
</div>

