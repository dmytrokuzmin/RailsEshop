<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Total items price</th>
      <th>Shipping price</th>
      <th>Status</th>
      <th>Created at</th>
      <th>Closed at</th>
      <th>Shipping option</th>
      <th>Shipping address</th>
      <th>Billing address</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.total_items_price %></td>
        <td><%= order.shipping_price %></td>
        <td><%= order.status %></td>
        <td><%= order.created_at %></td>
        <td><%= order.closed_at %></td>
        <td><%= order.shipping_option_id %></td>
        <td><%= order.shipping_address_id %></td>
        <td><%= order.billing_address_id %></td>
        <td><%= order.customer_id %></td>
        <td><%= link_to 'Show', [:admin, order] %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(order) %></td>
        <td><%= link_to 'Destroy', [:admin, order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

