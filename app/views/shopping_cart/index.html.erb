<p id="notice"><%= notice %></p>

<h1>Shopping cart</h1>
<div class="row">
  <% if @cart.shopping_cart_items.count == 0 %>
      <p>Cart is empty</p>
  <% else %>
      <table class="table table-striped">
        <thead>
        <tr>
          <th>Image</th>
          <th>Product</th>
          <th>Quantity</th>
          <th>Price per item</th>
        </tr>
        </thead>
        <tbody>
          <%  @cart.shopping_cart_items.each do |item| %>
            <tr>
            <td><%= link_to (image_tag item.product.image, class: "cart-image" ), item.product%></td>
            <td><%= link_to item.product.name, item.product %></td>
            <td><%= item.quantity  %></td>
            <td><%= item.product.price  %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <p class="pull-right">Total price: CZK <%= @cart.calculate_total  %></p>
      </div>
      <div class="row">
        <a href="<%= checkout_customer_url %>" class="btn btn-success pull-right">Proceed to checkout</a >
      </div>
  <% end %>
</div>


